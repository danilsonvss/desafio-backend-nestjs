// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PRODUCER
  AFFILIATE
  COPRODUCER
  PLATFORM
}

enum TaxType {
  TRANSACTION
  PLATFORM
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  balance   Balance?
  producerAffiliations    Affiliation[] @relation("ProducerAffiliations")
  affiliateAffiliations   Affiliation[] @relation("AffiliateAffiliations")
  producerCoproductions   Coproduction[] @relation("ProducerCoproductions")
  coproducerCoproductions Coproduction[] @relation("CoproducerCoproductions")

  @@map("users")
}

model Balance {
  id        String   @id @default(uuid())
  userId    String   @unique
  amount    Decimal  @default(0) @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("balances")
}

model Tax {
  id         String   @id @default(uuid())
  country    String
  type       TaxType
  percentage Decimal  @db.Decimal(5, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([country, type])
  @@map("taxes")
}

model Affiliation {
  id         String   @id @default(uuid())
  producerId String
  affiliateId String
  percentage Decimal  @db.Decimal(5, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  producer   User     @relation("ProducerAffiliations", fields: [producerId], references: [id], onDelete: Cascade)
  affiliate  User     @relation("AffiliateAffiliations", fields: [affiliateId], references: [id], onDelete: Cascade)

  @@unique([producerId, affiliateId])
  @@map("affiliations")
}

model Coproduction {
  id         String   @id @default(uuid())
  producerId String
  coproducerId String
  percentage Decimal  @db.Decimal(5, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  producer   User     @relation("ProducerCoproductions", fields: [producerId], references: [id], onDelete: Cascade)
  coproducer User     @relation("CoproducerCoproductions", fields: [coproducerId], references: [id], onDelete: Cascade)

  @@unique([producerId, coproducerId])
  @@map("coproductions")
}
